@model System.Text.Json.JsonElement

<style>
    .apod-img {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        cursor: zoom-in;
    }

        .apod-img:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
        }
</style>

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-body text-center">
            <!-- Title + Date -->
            <h2 class="card-title">@Model.GetProperty("title").GetString()</h2>
            <p class="text-muted">@Model.GetProperty("date").GetString()</p>

            <!-- Image with hover zoom -->
            <img src="@Model.GetProperty("url").GetString()" alt="NASA Image"
                 class="img-fluid rounded mb-4 apod-img" style="max-height:500px;" />

            <!-- Explanation -->
            <div class="text-start px-3">
                <h5 class="fw-bold">Explanation</h5>
                <p style="text-align: justify;">
                    @Model.GetProperty("explanation").GetString()
                </p>
            </div>
        </div>
    </div>
</div>
